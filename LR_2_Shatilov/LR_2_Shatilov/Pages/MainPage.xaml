<Page x:Class="LR_2_Shatilov.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LR_2_Shatilov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" >

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="ClientsBtn" Style="{StaticResource mainBtn}" Content="Клиенты" Margin="5" Click="ClientsBtn_Click"/>
            <Button x:Name="EmplBtn" Style="{StaticResource mainBtn}" Content="Сотрудники" Margin="5" Click="EmplBtn_Click"/>
            <Button x:Name="AttendanceBtn" Style="{StaticResource mainBtn}" Content="Занятия" Margin="5" Click="AttendanceBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
